    //COLOR CHANGE
    private void b_confirmarcolActionPerformed(java.awt.event.ActionEvent evt) {                                               
        if (r_claro.isSelected()) {
            Color MyColor = new Color(235,235,235);
            getContentPane().setBackground(MyColor);
            r_claro.setForeground(Color.BLACK);
            r_oscuro.setForeground(Color.BLACK);
            r_morado.setForeground(Color.BLACK);
            r_azul.setForeground(Color.BLACK);
            l_text1.setForeground(Color.BLACK);
            l_text2.setForeground(Color.BLACK);
            l_text3.setForeground(Color.BLACK);
            l_text4.setForeground(Color.BLACK);
            l_text5.setForeground(Color.BLACK);
            l_alert.setForeground(Color.BLACK);
        } else if (r_oscuro.isSelected()) {
            Color MyColor = new Color(34,39,44);
            getContentPane().setBackground(MyColor);
            r_claro.setForeground(Color.WHITE);
            r_oscuro.setForeground(Color.WHITE);
            r_morado.setForeground(Color.WHITE);
            r_azul.setForeground(Color.WHITE);
            l_text1.setForeground(Color.WHITE);
            l_text2.setForeground(Color.WHITE);
            l_text3.setForeground(Color.WHITE);
            l_text4.setForeground(Color.WHITE);
            l_text5.setForeground(Color.WHITE);
            l_alert.setForeground(Color.WHITE);
        } else if (r_morado.isSelected()) {
            Color MyColor = new Color(43,58,153);
            getContentPane().setBackground(MyColor);
            r_claro.setForeground(Color.WHITE);
            r_oscuro.setForeground(Color.WHITE);
            r_morado.setForeground(Color.WHITE);
            r_azul.setForeground(Color.WHITE);
            l_text1.setForeground(Color.WHITE);
            l_text2.setForeground(Color.WHITE);
            l_text3.setForeground(Color.WHITE);
            l_text4.setForeground(Color.WHITE);
            l_text5.setForeground(Color.WHITE);
            l_alert.setForeground(Color.WHITE);
        } else if (r_azul.isSelected()) {
            Color MyColor = new Color(85,137,249);
            getContentPane().setBackground(MyColor);
            r_claro.setForeground(Color.WHITE);
            r_oscuro.setForeground(Color.WHITE);
            r_morado.setForeground(Color.WHITE);
            r_azul.setForeground(Color.WHITE);
            l_text1.setForeground(Color.WHITE);
            l_text2.setForeground(Color.WHITE);
            l_text3.setForeground(Color.WHITE);
            l_text4.setForeground(Color.WHITE);
            l_text5.setForeground(Color.WHITE);
            l_alert.setForeground(Color.WHITE);
        }
    }                                              

    //SET ALERT
    private void b_confirmartiempoActionPerformed(java.awt.event.ActionEvent evt) {                                                  
        int hour = (Integer) sp_hora.getValue();
        int minute = (Integer) sp_minuto.getValue();
        int second = (Integer) sp_segundo.getValue();
        Timer alert = new Timer();
        TimerTask task = new TimerTask() {
            public void run() {
                l_alert.setVisible(true);
            }
        };
        alert.schedule(task,((second * 1000)+(minute*60*1000)+(hour*60*60*1000)));
    }                                                 

